<% include ../partials/header %>
<div class="page_create">
    <h1 class="page_text_align">Contact Request</h1><hr>
    <table class="page_table">
        <thead>
            <tr>
                <th class="page_border">S/N</th>
                <th class="page_border">Email</th>
                <th class="page_border">Status</th>
                <th class="page_border">Subject</th>
                <th class="page_border">Actions</th>
            </tr>
        </thead>
        <% contacts.forEach(function(contact, index){ %>
            <div class="caption">
                <tbody>
                    <tr>
                        <td class="page_border"><%=index + 1%></td>
                        <td class="page_border"><%=contact.email%></td>
                        <td class="page_border"><%=contact.status%></td> 
                        <td class="page_border"><%=contact.title%></td>
                        <td class="page_border">
                            <a class="button" href="/admin/contacts/<%= contact._id %>/edit">Edit</a>
                            <form action="/admin/contacts/<%= contact._id %>?_method=DELETE" method="POST">
                                <button class="button">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </div> 
        <% }); %>
    </table>
</div>
<% include ../partials/footer %>