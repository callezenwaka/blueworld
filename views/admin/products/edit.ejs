<% include ../partials/header %>
<div class="page_create">
    <div class="page_content">
        <h1 class="page_text_align">Edit Product</h1><hr>
        <div class="row"></div>
        <form action="/admin/products/<%=product._id%>?_method=PUT" method="POST" novalidate="novalidate" enctype="multipart/form-data">
            <div class="col-sm-6">
                <div class="form-field">
                    <label for="name">Name <span class="page_form_input_required">*</span></label>
                    <input type="text" name="product[name]" value="<%= product.name %>" placeholder="Enter product name" class="page_form_input" id="name" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="price">Price <span class="page_form_input_required">*</span></label>
                    <input type="text" name="product[price]" value="<%= product.price %>" placeholder="Enter product price"  class="page_form_input" id="price" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="image">Image <span class="page_form_input_required">*</span></label>
                    <input type="file" name="image" accept="image/*" class="" id="image" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="description">Description  <span class="page_form_input_required">*</span></label>
                    <textarea name="product[description]" placeholder="Enter product description" cols="40" rows="10" class="page_form_input" id="description" aria-required="true" aria-invalid="false"><%= product.description %></textarea>
                </div>
                <div class="">
                    <button>Update Product</button>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>