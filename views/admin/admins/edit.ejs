<% include ../partials/header %>
<div class="page_create">
    <div class="page_content">
        <h1 class="page_text_align">Edit Account</h1>
        <div class="row"></div>
        <form action="/admin/admins/<%=admin._id%>?_method=PUT" method="post" novalidate="novalidate">
            <div class="col-sm-6">
                <div class="form-field">
                    <label for="first_name">First Name <span class="page_form_input_required">*</span></label>
                    <input type="text" name="admin[first_name]" value="<%= admin.first_name %>" placeholder="Enter your First name" class="page_form_input" id="first_name" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="last_name">Last Name <span class="page_form_input_required">*</span></label>
                    <input type="text" name="admin[last_name]" value="<%= admin.last_name %>" placeholder="Enter your Last name" class="page_form_input" id="last_name" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="email">Email  <span class="page_form_input_required">*</span></label>
                    <input type="email" name="admin[email]" value="<%= admin.email %>" placeholder="Enter your email" class="page_form_input" id="email" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="password">Password  <span class="page_form_input_required">*</span>
                    </label><input type="password" name="admin[password]" value="" placeholder="Enter your password" class="page_form_input" id="password" aria-required="true" aria-invalid="false" />
                </div>
                <br>
                <div class="form-field">
                    <label for="image">Image <span class="page_form_input_required">*</span></label>
                    <input type="file" name="admin[image]" value="<%= admin.image %>"  class="page_form_input" id="image" aria-invalid="false" />
                </div>
                <br>
                <div class="">
                    <button>Update Account</button>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>