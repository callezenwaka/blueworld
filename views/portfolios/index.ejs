<% include ../partials/header %>
<div class="page_content page_desktop_view">
    <h1 class="page_text_align">Management Team</h1><hr class="page_hr">
    <% portfolios.forEach(function(portfolio){ %>
            <div class="page_list">
                <div class="page_list_items_image_container">
                    <img class="page_list_items_image" src="<%= portfolio.image %>">
                </div>
                <div class="page_list_items_details">
                    <p><h3 style="color: #3065b5"><strong><%=portfolio.first_name%> <%=portfolio.last_name%></strong></h3></p>
                    <p><h3><%=portfolio.position%></h3></p><hr>
                    <p><strong>Email: </strong><%=portfolio.email%></p>
                    <p><strong>Phone Number: </strong><%=portfolio.phone_number%></p>
                    <!-- <p><strong>Profile: </strong><%=portfolio.profile %></p> -->
                    <a class="button" href="/portfolios/<%= portfolio._id %>">View Details</a>
                </div>
            </div>
    <% }); %>
</div>
<% include ../partials/footer %>